rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // backgrounds 컬렉션은 누구나 읽기 허용
    match /backgrounds/{doc} {
      allow read: if true;
    }

    // 기존 users 컬렉션 규칙
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}




